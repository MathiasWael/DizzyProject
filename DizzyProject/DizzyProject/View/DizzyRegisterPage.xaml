<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DizzyProject.View.DizzyRegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="register your dizziness" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontSize="15"/>
            <Label x:Name="DizzyLevelLabel" FontSize="75" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"/>
            <Slider Maximum="10.0" Minimum="0.0" Value="5.0" VerticalOptions="StartAndExpand" ValueChanged="Slider_ValueChanged"/>
            <Editor WidthRequest="300" HeightRequest="100" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" BackgroundColor="LightGray"/>
            <Button Text="Submit" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" CornerRadius="10" BorderWidth="1" WidthRequest="200"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>