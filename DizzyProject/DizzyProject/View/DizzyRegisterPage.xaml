<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DizzyProject.View.DizzyRegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="How dizzy are you?" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontSize="15"/>
            <Label x:Name="DizzyLevelLabel" FontSize="75" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"/>
            <Slider x:Name="dizzinessValue" Maximum="10.0" Minimum="0.0" Value="5.0" VerticalOptions="StartAndExpand" ValueChanged="Slider_ValueChanged" MinimumTrackColor="Gray" ThumbColor="Red" MaximumTrackColor="Black"/>
            <Editor x:Name="Note" WidthRequest="300" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand" FontSize="Small"/>
            <Button Text="Submit" BackgroundColor="Orange" CornerRadius="10" BorderWidth="1" HorizontalOptions="Fill" Pressed="Submit_Pressed"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>