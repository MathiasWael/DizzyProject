<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DizzyProject.View.StepCounterPage"
             Title="Step Counter">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Your steps today" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="15"/>
            <Label x:Name="StepsLabel"  FontSize="75" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>