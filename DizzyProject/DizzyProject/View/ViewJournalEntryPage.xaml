<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DizzyProject.View.ViewJournalEntryPage"
             Title="Journal Entry">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Your journal entry:" Style="{DynamicResource ListItemTextStyle}"/>
            <Editor x:Name="JournalEntryInputEditor" WidthRequest="300" HeightRequest="100" HorizontalOptions="CenterAndExpand" BackgroundColor="LightGray"/>
            <Button x:Name="SubmitJournalEntryButton" BackgroundColor="#2f89cc" TextColor="White" Text="Submit" HorizontalOptions="EndAndExpand" Clicked="SubmitJournalEntryButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>