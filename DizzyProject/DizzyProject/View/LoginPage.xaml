<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DizzyProject.LoginPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="End"  BackgroundColor="White">
            <Entry x:Name="EmailEntry" Text="annalarsen@hotmail.com" Placeholder="Email" WidthRequest="300" HorizontalOptions="CenterAndExpand"/>
            <Entry x:Name="PasswordEntry" Text="Password123" Placeholder="Password" WidthRequest="300" IsPassword="True" HorizontalOptions="CenterAndExpand"/>
            <StackLayout VerticalOptions="End">
                <Button Pressed="Login_Pressed" BackgroundColor="#2f89cc" TextColor="White" Text="Login" CornerRadius="10" BorderWidth="1" HorizontalOptions="Fill"/>
                <Button Pressed="CreateAccount" BackgroundColor="#2f89cc" TextColor="White" Text="Create Account" CornerRadius="10" BorderWidth="1" HorizontalOptions="Fill" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>