<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DizzyProject.View.DizzyRegisterContentView">
    <ContentView.Content>
        <StackLayout>
            <Label Text="How dizzy are you?" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontSize="15"/>
            <Label x:Name="DizzyLevelLabel" FontSize="75" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"/>
            <Slider x:Name="dizzinessValue" Maximum="10.0" Minimum="0.0" Value="5.0" VerticalOptions="StartAndExpand" ValueChanged="Slider_ValueChanged" MinimumTrackColor="#82b8e0" ThumbColor="#2f89cc" MaximumTrackColor="Gray"/>
            <Editor x:Name="Note" WidthRequest="300" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="LightGray"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>