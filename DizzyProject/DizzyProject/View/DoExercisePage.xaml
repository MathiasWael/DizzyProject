<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:DizzyProject.View"
             x:Class="DizzyProject.View.DoExercisePage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label x:Name="reviewof" FontSize="Large" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Grid.Row="0"/>
            <view:DizzyRegisterView x:Name="DizzyView" Grid.Row="1"/>
            <Button Text="Save to journal" CornerRadius="10" BackgroundColor="LightBlue" BorderWidth="1" Pressed="Save_Pressed" VerticalOptions="CenterAndExpand" Grid.Row="2"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>